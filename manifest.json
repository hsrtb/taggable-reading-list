{
    "manifest_version": 3,
    "name": "Taggable Reading List",
    "version": "0.1",

    "action": {
        "default_icon": "icons/save.svg",
        "default_title": "Save Tabs"
    },
    "permissions": ["tabs", "storage", "unlimitedStorage"],

    "background": {
        "scripts": ["common.js", "background.js"]
    },
    "commands": {
        "show-list": {
            "suggested_key": {
                "default": "Alt+Shift+2"
            },
            "description": "show reading list"
        }
    }
}
